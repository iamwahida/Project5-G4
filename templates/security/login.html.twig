
{% extends 'base.html.twig' %}


{% block title %}Log in{% endblock %}

{% block body %}
<br>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="registration-form" style="    background-color: #fff;
    max-width: 600px;
    margin: auto;
    padding: 50px 70px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);">
        <form style="    background-color: #fff;
    max-width: 600px;
    margin: auto;
    padding: 50px 70px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);">
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <h2 class="login-title" onclick="goReg()">Log In Here</h2>

            <div class="form-group">
                <input for="inputEmail" value="{{ last_username }}" type="email" name="email" id="inputEmail" autocomplete="email" required autofocus class="form-control item"  placeholder="Email">
            </div>

            <div class="form-group">
                <input for="inputPassword"type="password" name="password" id="inputPassword" placeholder="password" class="form-control item"autocomplete="current-password" required>
            </div>


            <div class="form-group">
                <a style="margin-left:125px" href="Reg.html" type="button" class="btn btn-block create-account">Login your Account</a>
            </div>
            <input type="hidden" name="_csrf_token"
   value="{{ csrf_token('authenticate') }}"
> <br><br>
        </form>
        <div class="social-media" style="  max-width: 600px;
  background-color: #fff;
    margin-left:-70px;
    margin-bottom: -100px;
  padding: 35px 0;
  text-align: center;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  color: #9fadca;
  border-top: 1px solid #dee9ff;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);
  width:800px;
}">
            <h5>Sign up with social media</h5>
            <div class="social-icons">
                <a style="text-decoration: none;
                    opacity: 0.6;" href="#"><i class="icon-social-facebook" title="Facebook"></i></a>
                <a style="text-decoration: none;
                    opacity: 0.6;" href="#"><i class="icon-social-google" title="Google"></i></a>
                <a style="text-decoration: none;
                    opacity: 0.6;" href="#"><i class="icon-social-twitter" title="Twitter"></i></a>
            </div>
        </div>
    </div>
</form>

<br><br><br><br><br><br><br>
{% endblock %}

