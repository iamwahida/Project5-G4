{% extends 'base.html.twig' %}

{% block title %}University{% endblock %}

{% block body %}
<h1 class="text-center mt-5 mb-5">University</h1>

<div class="container d-flex justify-content-center">
<div class="row">
  {% for university in universities %}
    <div class="col">
        <div class="card border-dark mb-3 shadow-sm p-3 mb-5 bg-body rounded" style="width: 18rem;">
            <div class="card-header fw-bold">{{ university.universityName }}</div>
            <div class="card-body">
              {# <h6 class="card-subtitle mb-2 text-muted">{{ subject.id }}</h6> #}
                    <a style="background-color: rgb(241, 158, 158);" 
                    href="{{ path('app_university_show', {'id': university.id}) }}" class="card-link btn" role="button">Details</a>
               <br><br>
                    <a style="background-color: rgb(116, 200, 221);"
                     href="{{ path('app_university_edit', {'id': university.id}) }}" class="card-link btn " role="button">Edit</a>
            </div>
          </div>
    </div>
    {% else %}
          <div>No records found.</div>
          {% endfor %}
</div>
</div>
<div class="container d-flex justify-content-center">
  <a class="card-link btn btn-outline-dark mt-2" role="button" 
   href="{{ path('app_university_new') }}">Create new</a>
  </div>
{% endblock %}
